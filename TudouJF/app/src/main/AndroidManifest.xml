        <activity android:name=".activity.NewcomerExperienceBidActivity"/>
        <!--信息披露activity-->
        <activity android:name=".activity.InfoPublishActivity"/>
        <!--我的体验金activity-->
        <activity android:name=".activity.MyExperienceGoldActivity"/>
        <!--活动专区activity-->
        <activity android:name=".activity.SpecialOfferActivity"/>
        <!--我的信息activity-->
        <activity android:name=".activity.MyMessageActivity"/>

        <service
            android:name=".service.MyService"
            android:enabled="true" />
        <service
            android:name=".service.MyIntentService"
            android:exported="false">

        </service>
        <!--签到悬浮窗service-->
        <service android:name=".service.SignInService"
            android:exported="false"/>
