<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/global_theme_background_color</item>
        <item name="colorPrimaryDark">@color/welcome_statusbar_color</item>
        <item name="colorAccent">@color/global_theme_background_color</item>
        <item name="android:windowBackground">@drawable/welcomnew</item>
    </style>

    <style name="NativateButton">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--SmartRefreshLayout设置内容不满时也可以上拉加载,设置下拉刷新时内容随header头移动-->
    <style name="SmartRefreshLayout">
        <!--<item name="srlEnableLoadmoreWhenContentNotFull">true</item>-->
        <item name="srlEnableHeaderTranslationContent">true</item>
    </style>

    <style name="showPopupAnimation" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>
