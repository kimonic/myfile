<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_lvitem_succeedinvitation"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lvitem_succeedinvitation1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xshape_threeboder"
            android:gravity="center"
            android:text="@string/act_succeedinvitation_default"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lvitem_succeedinvitation2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xshape_oneboder"
            android:gravity="center"
            android:text="@string/act_succeedinvitation_default1"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lvitem_succeedinvitation3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/xshape_threeboder"
            android:gravity="center"
            android:text="@string/act_succeedinvitation_default1"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>

