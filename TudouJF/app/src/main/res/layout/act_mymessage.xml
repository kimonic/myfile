<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_act_mymessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/global_theme_background_color"
            android:orientation="horizontal">
            <TextView
                android:layout_width="24dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/tv_act_mymessage_systemmessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_mymessage_systemmessage"
                android:textColor="@color/color_white"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tv_act_mymessage_mymessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/act_mymessage_mymessage"
                android:textColor="@color/act_mymessage_unselcolor"
                android:textSize="18sp"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_act_mymessage_bac"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/xvector_back"

            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_background_color"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_act_mymessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>