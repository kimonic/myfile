<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_act_mymessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/global_theme_background_color"
            >
            <TextView
                android:id="@+id/tv_act_mymessage_systemmessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:text="@string/act_mymessage_systemmessage"
                android:gravity="center"

                />
            <TextView
                android:id="@+id/tv_act_mymessage_mymessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/act_mymessage_unselcolor"
                android:textSize="18sp"
                android:text="@string/act_mymessage_mymessage"
                android:gravity="center"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_act_mymessage_bac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/xvector_back"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"

            />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_background_color"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_act_mymessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>