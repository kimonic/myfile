<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/global_background_color"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_act_helpcentercommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_act_helpcentercommon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/global_theme_background_color"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_act_helpcentercommon_bac"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/xvector_back" />
    </FrameLayout>



    <ExpandableListView
        android:id="@+id/elv_act_helpcentercommon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_marginTop="20dp"
        android:dividerHeight="1dp"
        android:divider="@color/global_background_color"
        />

</LinearLayout>