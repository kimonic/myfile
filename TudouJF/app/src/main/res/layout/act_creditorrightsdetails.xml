<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_creditorrightsdetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_creditorrightsdetails_title"
        app:leftImage="@drawable/xvector_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tudoujf.ui.InfoView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/global_background_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:gravity="center"
                    android:text="@string/act_creditorrightsdetails_zhuanrangjiage"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:gravity="center"
                    android:text="XX,XXX.XX元"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:gravity="center"
                    android:text="@string/act_creditorrightsdetails_zhuanrangshouyi"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:gravity="center"
                    android:text="XX,XXX.XX元"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/global_background_color"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:gravity="center"
                    android:text="@string/act_creditorrightsdetails_daishoubenjin"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical"
                    android:text="XX,XXX.XX元"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:gravity="center"
                    android:text="@string/act_creditorrightsdetails_daishoubenjin"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical"
                    android:text="XX,XXX.XX元"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_gray"
                    android:gravity="center"
                    android:text="@string/act_creditorrightsdetails_daishoubenjin"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical"
                    android:text="XX,XXX.XX元"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />





        </LinearLayout>
    </ScrollView>
</LinearLayout>