<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"
            />
        <ListView
            android:id="@+id/lv_dialoglist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_dialoglist_cancel"
            android:layout_width="76dp"
            android:layout_height="26dp"
            android:background="@drawable/xshape_roundrect_mbordergray1"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/color_gray"
            />
        <View
            android:layout_width="80dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_dialoglist_confirm"
            android:layout_width="76dp"
            android:layout_height="26dp"
            android:background="@drawable/xshape_roundrect_mborderthemecolor"
            android:text="@string/queren"
            android:gravity="center"
            android:textColor="@color/color_white"
            />

    </LinearLayout>

</LinearLayout>