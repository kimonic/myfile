<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_background_color"
    android:orientation="vertical">

    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_myaccount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_myaccount_title"
        app:leftImage="@drawable/xvector_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/global_background_color"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:background="@color/color_white"
                >

                <ImageView
                    android:id="@+id/iv_act_myaccount_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/act_lock_icon"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_act_myaccount_username"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_black"
                        android:gravity="center"
                        android:text="XXXXXXXXXX"

                        />

                    <ImageView
                        android:id="@+id/iv_act_myaccount_vip"
                        android:layout_width="18dp"
                        android:layout_height="11dp"
                        android:src="@drawable/frag_my_vipt"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_act_myaccount_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:text="@string/genggaitouxiang"
                        android:gravity="center_vertical|end"
                        />

                    <TextView
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:background="@drawable/xvector_rightarrowlarge"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:layout_height="38dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textSize="12sp"
                android:textColor="@color/color_black2"
                android:gravity="center_vertical"
                android:text="@string/yonghuxinxi"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:id="@+id/ll_act_myaccount_bankcard"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/act_account_bankcard"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:text="@string/yinhangkaguanli"

                    />



                <TextView
                    android:id="@+id/tv_act_myaccount_bankcard_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"
                    android:text="@string/weibangding"
                    android:gravity="center_vertical|end"
                    />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:background="@drawable/xvector_rightarrowlarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:id="@+id/ll_act_myaccount_huifu"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/act_account_huifuzhanghao"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:text="@string/wodehuifuzhanghao"

                    />



                <TextView
                    android:id="@+id/tv_act_myaccount_huifu_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp"
                    android:gravity="center_vertical|end"
                    />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:background="@drawable/xvector_rightarrowlarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingTop="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/anquanrenzheng"
                android:textColor="@color/color_black2"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:id="@+id/ll_act_myaccount_phone"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/act_account_shoujibangding"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:text="@string/shoujibangding"

                    />



                <TextView
                    android:id="@+id/tv_act_myaccount_phone_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp"
                    android:text="@string/weibangding"
                    android:gravity="center_vertical|end"
                    />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:background="@drawable/xvector_rightarrowlarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_act_myaccount_email"

                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:src="@drawable/act_account_youxiangrenzheng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/youxiangrenzheng"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"

                    />


                <TextView
                    android:id="@+id/tv_act_myaccount_email_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="@string/weirenzheng"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/xvector_rightarrowlarge" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:id="@+id/ll_act_myaccount_name"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/act_account_shimingrenzheng"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:text="@string/shimingrenzheng"

                    />



                <TextView
                    android:id="@+id/tv_act_myaccount_name_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp"
                    android:text="@string/weirenzheng"
                    android:gravity="center_vertical|end"
                    />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:background="@drawable/xvector_rightarrowlarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingRight="15dp"
                android:text="@string/mimashezhi"
                android:textColor="@color/color_black2"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />
            <LinearLayout
                android:id="@+id/ll_act_myaccount_login"

                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/act_account_denglumima" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/denglumima"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"

                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="@string/xiugai"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/xvector_rightarrowlarge" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                />

            <LinearLayout
                android:id="@+id/ll_act_myaccount_gesture"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/act_account_shoushimima" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/shoushimima"
                    android:textColor="@color/color_black"
                    android:textSize="12sp"

                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_act_myaccount_oc"
                    android:layout_width="48dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/act_myaccount_open" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/global_background_color"
                />


            <TextView
                android:id="@+id/tv_act_myaccount_signout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:textSize="14sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/tuichudenglu"
                android:background="@drawable/xshape_roundrect_themecolor"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/global_background_color"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>