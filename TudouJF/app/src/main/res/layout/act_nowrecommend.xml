<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mtb_act_nowrecommend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_theme_background_color"
        >
        <TextView
            android:id="@+id/tv_act_nowrecommend_close"
            android:layout_width="24dp"
            android:layout_height="40dp"
            android:background="@drawable/xvector_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/act_nowrecommend_title"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_act_nowrecommend_share"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:background="@drawable/xvector_share"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"        
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:src="@drawable/act_nowrecommend_bac"

            />
        <TextView
            android:id="@+id/tv_act_nowrecommend_register"
            android:layout_width="167dp"
            android:layout_height="57dp"
            android:background="@drawable/act_nowrecommend_tvbac"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            />
        <ImageView
            android:id="@+id/iv_act_nowrecommend_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:src="@drawable/act_nowrecommend_bac1"

            />
    </FrameLayout>

</LinearLayout>