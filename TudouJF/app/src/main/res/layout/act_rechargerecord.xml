<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_background_color"
    >

    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_rechargerecord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_rechargerecord_title"
        app:leftImage="@drawable/xvector_back" />

    <ListView
        android:id="@+id/lv_act_rechargerecord"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:dividerHeight="5dp"
        android:divider="@color/global_background_color"
        />

    <TextView
        android:id="@+id/tv_act_rechargerecord_loadmore"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="16sp"
        android:textColor="@color/color_gray"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/dianjijiazaigengduo"
        android:background="@drawable/xshape_roundrect_mbordergraywhite"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />


</LinearLayout>
