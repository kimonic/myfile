        app:centerText="@string/act_transactiondetails_title"
        app:leftImage="@drawable/xvector_back" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_act_transactiondetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/global_background_color"
        style="@style/SmartRefreshLayout"
        >

    <ListView
        android:id="@+id/lv_act_transactiondetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:dividerHeight="0dp"
        android:divider="@color/color_line"
        android:paddingTop="2px"
        android:background="@drawable/xshape_onebodertop_line"
        />
