<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_affirmbuy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_productdetails_temptitle"
        app:leftImage="@drawable/xvector_back" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/color_white"
        android:text="@string/act_affirmbuy_yujihuodeshouyi"
        android:background="@color/global_theme_background_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:text="00,000.00"
        android:background="@color/global_theme_background_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:background="@color/global_theme_background_color"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="@string/act_affirmbuy_qitoujine"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="00,000.00"
                />

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/act_affirmbuy_bac"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="@string/act_affirmbuy_touzishangxian"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="00,000.00"
                />

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/act_affirmbuy_bac"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="@string/act_affirmbuy_lixishouyi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="00,000.00"
                />

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@color/act_affirmbuy_bac"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="@string/act_affirmbuy_jianglishouyi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:text="00,000.00"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_ketouzijine"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/act_affirmbuy_ketouzijine"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor"
            android:text="00,000.00元"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_zhanghuyue"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/act_affirmbuy_zhanghuyue"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor"
            android:text="00,000.00元"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center|end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/act_affirmbuy_chongzhi"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:background="@color/global_theme_background_color"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_touzijine"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/touzijineyuan"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/et_act_affirm_touzijine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00,000.00元"
            android:textColor="@color/act_productdetails_tvcolor"
            android:background="@null"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_keyonghongbao"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/act_affirmbuy_keyonghongbao"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_act_affirmbuy_redpackage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三张可用"
                android:gravity="center"
                android:textColor="@color/act_productdetails_tvcolor"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/arrow2_right"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_keyongjiaxiquan"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/act_affirmbuy_keyongjiaxiquan"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_act_affirmbuy_jiaxiquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两张可用"
                android:gravity="center"
                android:textColor="@color/act_productdetails_tvcolor"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/arrow2_right"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:contentDescription="@null"
            android:src="@drawable/act_affirmbuy2_keyongfanxianquan"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textSize="12sp"
            android:textColor="@color/act_productdetails_tvcolor1"
            android:text="@string/act_affirmbuy_keyongfanxianquan"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_act_affirmbuy_fanxianquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无可用返现券"
                android:gravity="center"
                android:textColor="@color/act_productdetails_tvcolor"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/arrow2_right"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/act_affirm2_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:text="@string/act_affirmbuy_tongyi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/global_theme_background_color"
            android:text="@string/act_affirmbuy_pingtaijujianfuwuxieyi"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_act_affirmbuy_affirmbuy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/xshape_roundrect_mblue"
        android:gravity="center"
        android:text="@string/act_affirmbuy_querengoumai"
        android:textColor="@color/color_white"
        android:textSize="18sp" />


</LinearLayout>