<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_specialoffer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_specialoffer_title"
        app:leftImage="@drawable/xvector_back" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/global_background_color"
        />

    <ListView
        android:id="@+id/lv_act_specialoffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/global_background_color"
        android:dividerHeight="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/global_background_color"
        />

</LinearLayout>