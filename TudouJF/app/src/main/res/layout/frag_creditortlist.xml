<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frag_creditorlist_total"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/frag_managemoneymatters_quanbu"
            android:textColor="@color/global_theme_background_color"
            android:textSize="12sp"
            android:background="@color/frag_managemoneymatterschild_bac"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/ll_frag_creditorlist1"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_creditorlist11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_managemoneymatters_anlilv"
                android:textColor="@color/color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_frag_creditorlist1"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_updownarrow3" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/ll_frag_creditorlist2"
            android:layout_width="85dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_creditorlist12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_creditorlist_zhuanrangqishu"
                android:textColor="@color/color_black"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/tv_frag_creditorlist2"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_updownarrow3" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/ll_frag_creditorlist3"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_creditorlist13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_creditorlist_zhuanrangjine"
                android:textColor="@color/color_black"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/tv_frag_creditorlist3"
                android:layout_marginLeft="5dp"
                android:layout_width="7dp"
                android:layout_height="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_updownarrow3"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_background_color" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_managemoneymatterstouchild"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/global_background_color"
        app:srlEnableHeaderTranslationContent="true"
        >

        <ListView
            android:id="@+id/lv_frag_managemoneymatterstouchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/global_background_color"
            android:dividerHeight="10dp" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>