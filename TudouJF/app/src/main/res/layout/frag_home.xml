<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_frag_home"
    style="@style/SmartRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_frag_home"
                android:layout_width="match_parent"
                android:layout_height="175dp">

            </android.support.v4.view.ViewPager>

            <com.tudoujf.ui.DotView
                android:id="@+id/dv_frag_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp" />

            <FrameLayout
                android:id="@+id/fl_frag_msgcount"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:layout_gravity="end">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_frag_msgcount"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@null"
                        android:src="@drawable/frag_home_info" />

                    <TextView
                        android:id="@+id/tv_frag_msgcount"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:textSize="10sp" />
                </FrameLayout>
            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">


            <LinearLayout
                android:id="@+id/ll_frag_home_xinshoufuli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@null"
                    android:src="@drawable/frag_home_xinshoufuli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/frag_home_xinshoufuli"
                    android:textColor="@color/frag_home_textcolor"
                    android:textSize="14sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frag_home_huodongzhuanqu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@null"
                    android:src="@drawable/frag_home_huodongzhuanqu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/frag_home_huodongzhuanqu"
                    android:textColor="@color/frag_home_textcolor"
                    android:textSize="14sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frag_home_tuijianyouli"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@null"
                    android:src="@drawable/frag_home_tuijianyouli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/frag_home_tuijianyouli"
                    android:textColor="@color/frag_home_textcolor"
                    android:textSize="14sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frag_home_xinxipilu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@null"
                    android:src="@drawable/frag_home_xinxipilou" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/frag_home_xinxipilou"
                    android:textColor="@color/frag_home_textcolor"
                    android:textSize="14sp"

                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_frag_home_fengxiantishi1"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/global_background_color"
            android:gravity="center"
            android:textColor="@color/frag_home_textcolor1"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/color_white">

            <TextView
                android:id="@+id/tv_frag_home_xinshouzhuanxiang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/xshape_roundrect_twoconner"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/frag_home_xinshouzhuanxiangbiao"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_frag_home_bidtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="14sp"

                />

            <com.tudoujf.ui.AwardInfoView
                android:id="@+id/aiv_frag_home"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="end" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_frag_home_leftarrow"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/xvector_leftarrow" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_frag_home_ball"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_frag_home_rightarrow"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/xvector_rightarrow" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/touzijine"
                android:textColor="@color/frag_home_textcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_frag_home_touzijine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="1000元"
                android:textColor="@color/frag_home_bac"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text="@string/frag_home_touziqixian"
                android:textColor="@color/frag_home_textcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_frag_home_touziqixian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="30天"
                android:textColor="@color/frag_home_bac"
                android:textSize="12sp" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_frag_home"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/xshape_roundrect_mblue"
                        android:gravity="center"
                        android:text="@string/frag_home_lijitouzi"
                        android:textColor="@color/color_white"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_frag_home_fengxiantishi2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/global_background_color"
                    android:gravity="center"
                    android:textColor="@color/frag_home_textcolor1"
                    android:textSize="12sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_frag_home_signin"
                android:layout_width="92dp"
                android:layout_height="61dp"
                android:layout_gravity="top|end"
                android:contentDescription="@null"
                android:src="@drawable/frag_home_qiandao" />

        </FrameLayout>


    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>