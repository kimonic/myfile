<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_frag_dueininterest1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="@string/frag_dueininterest_date"
            />
        <TextView
            android:id="@+id/tv_frag_dueininterest2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="@string/frag_dueininterest_name"
            />
        <TextView
            android:id="@+id/tv_frag_dueininterest3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="@string/frag_dueininterest_toubiaojineyuan"
            />

        <TextView
            android:id="@+id/tv_frag_dueininterest4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:text="@string/frag_dueininterest_shouyi"
            />

    </LinearLayout>
    <ListView
        android:id="@+id/lv_frag_dueininterest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>