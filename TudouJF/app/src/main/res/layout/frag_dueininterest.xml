<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frag_dueininterest1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_dueininterest_date"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            android:background="@drawable/xshape_fourboder"/>

        <TextView
            android:id="@+id/tv_frag_dueininterest2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_dueininterest_name"
            android:textColor="@color/color_black"
            android:textSize="14sp"
            android:background="@drawable/xshape_threeboderql"
            />

        <TextView
            android:id="@+id/tv_frag_dueininterest3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_dueininterest_toubiaojineyuan"
            android:textColor="@color/color_black"
            android:background="@drawable/xshape_threeboderql"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_frag_dueininterest4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_dueininterest_shouyi"
            android:textColor="@color/color_black"
            android:background="@drawable/xshape_threeboderql"
            android:textSize="14sp" />

    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_dueininterest"
        style="@style/SmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_frag_dueininterest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:dividerHeight="0dp"
            android:divider="#00000000"

            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>