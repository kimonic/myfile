<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/xshape_roundrect_mwhite"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/act_affirmbuy_inputtouzimima"
        android:textColor="@color/color_black"
        android:textSize="16sp" />

    <com.tudoujf.ui.PasswordView
        android:id="@+id/pv_act_affirmbuy_dialog"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@null"
        android:cursorVisible="false"
        android:focusableInTouchMode="true"
        android:inputType="number"


        />

    <TextView
        android:id="@+id/tv_act_affirmbuy_dialog"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_mbordergray"
        android:gravity="center"
        android:text="@string/act_affirmbuy_queren"
        android:textSize="16sp" />
</LinearLayout>




