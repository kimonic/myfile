<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_frag_usable_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_frag_usable_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:text="您有三个红包可使用,立即使用>>"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_orange"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_orange"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"  />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_usablewelfare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlEnableRefresh="false"
        app:srlEnableLoadmoreWhenContentNotFull="false"
        app:srlEnableHeaderTranslationContent="false"
        android:background="@color/global_background_color">
    <ListView
        android:id="@+id/lv_frag_usable_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="10dp"
        android:divider="#F0F0E8"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:id="@+id/ll_frag_usable_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="130dp"
            >
            <ImageView
                android:id="@+id/iv_frag_usable_baoquan"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_frag_usable_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/color_gray3"
            android:paddingTop="20dp"
            />
    </LinearLayout>


</LinearLayout>