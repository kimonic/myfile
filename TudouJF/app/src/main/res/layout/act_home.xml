<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_act_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.tudoujf.ui.NaviButtonView
        android:id="@+id/nbv_act_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/color_white"
        app:imagesSelArray="@array/imagesSelR"
        app:imagesUnSelArray="@array/imagesUnSelR"
        app:textArray="@array/textIdR"
        app:count="4"
        app:colorSel="@color/global_theme_background_color"
        app:colorUnSel="@color/black"
        >

    </com.tudoujf.ui.NaviButtonView>




</LinearLayout>