<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_frag_discover"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/frag_discover_discover"
        app:leftImage="@drawable/xvector_back" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_discover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlEnableHeaderTranslationContent="true"
        app:srlEnableLoadmore="false"
        app:srlEnableRefresh="true">

        <ListView
            android:id="@+id/lv_frag_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:divider="@color/global_background_color"
            android:dividerHeight="10dp" />


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>