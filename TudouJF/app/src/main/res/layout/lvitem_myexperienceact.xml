<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <TextView
            android:id="@+id/lvitem_myexperience_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_gray"
            android:layout_weight="1"
            android:background="@drawable/xshape_threeboder"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/lvitem_myexperience_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_gray"
            android:layout_weight="1"
            android:background="@drawable/xshape_oneboder"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/lvitem_myexperience_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_gray"
            android:layout_weight="1"
            android:background="@drawable/xshape_threeboder"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/lvitem_myexperience_tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_gray"
            android:layout_weight="1"
            android:background="@drawable/xshape_oneboder"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/lvitem_myexperience_tv5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_gray"
            android:layout_weight="1"
            android:background="@drawable/xshape_threeboder"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>