<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_affirm_bac"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:contentDescription="@null"
        android:src="@drawable/act_login2_bac" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_edittextbac"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            android:src="@drawable/act_login2_phone"

            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />

        <EditText
            android:id="@+id/et_act_register_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/act_register_username"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_act_register_clear"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/act_login2_clear"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_edittextbac"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:contentDescription="@null"
            android:src="@drawable/act_register2_imagecode"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />

        <EditText
            android:id="@+id/et_act_register_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/act_register_imagecode"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_act_register_codeimage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/act_register_imagecode"
            android:background="@color/colorPrimary"


            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_edittextbac"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            android:src="@drawable/act_register2_phonecode"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />

        <EditText
            android:id="@+id/et_act_register_phonecode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/act_register_phonecodehint"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_act_register_getcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xshape_roundrect_myellow"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/act_register_requestcode"
            android:textColor="@color/act_register_tvcolor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_edittextbac"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            android:src="@drawable/act_login2_lock"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />

        <EditText
            android:id="@+id/et_act_register_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/act_login_password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_act_register_clear1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/act_login2_clear"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_act_register_openclose"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/act_login2_eyeopen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/xshape_roundrect_edittextbac"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="45dp"
            android:contentDescription="@null"
            android:src="@drawable/act_register2_referrer"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"

            />

        <EditText
            android:id="@+id/et_act_register_referrer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/act_register_referrerhint"
            android:inputType="textPassword"
            android:textSize="12sp" />


    </LinearLayout>

   <TextView
       android:id="@+id/tv_act_register_login"
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:text="@string/act_register_login"
       android:gravity="center_vertical"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:textSize="12sp"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="5dp"
       android:textColor="@color/act_register_tvcolor1"

       />

    <TextView
        android:id="@+id/tv_act_register_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/xshape_roundrect_mblue"
        android:gravity="center"
        android:text="@string/act_register_register"
        android:textColor="@color/act_register_textcolor1"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_act_register_agree"
        >
        <CheckBox
            android:id="@+id/cb_act_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/act_register_agree"
            android:textSize="12sp"
            android:clickable="false"
            android:background="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/act_register_tudouxieyi"
            android:gravity="center_vertical"
            android:textColor="@color/act_register_tvbac1"
            />
    </LinearLayout>


</LinearLayout>