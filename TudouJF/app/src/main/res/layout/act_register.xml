        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/xshape_roundrect_edittextbac"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:src="@drawable/act_register2_phonecode"

                />

            <EditText
                android:id="@+id/et_act_register_phonecode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/act_register_phonecodehint"
                android:inputType="phone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_act_register_getcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/xshape_roundrect_mgray"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/act_register_requestcode"
                android:textColor="@color/act_register_tvcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/xshape_roundrect_edittextbac"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:src="@drawable/act_login2_lock"

                />

            <EditText
                android:id="@+id/et_act_register_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/act_login_password"
                android:inputType="textPassword"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/iv_act_register_clear1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/xvector_clear" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_act_register_openclose"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null"
                android:src="@drawable/act_login2_eyeclose" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/xshape_roundrect_edittextbac"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:src="@drawable/act_register2_referrer"

                />

            <EditText
                android:id="@+id/et_act_register_referrer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/act_register_referrerhint"
                android:inputType="text"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_act_register_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:text="@string/act_register_login"
            android:textColor="@color/act_register_tvcolor1"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/tv_act_register_register"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/xshape_roundrect_mblue"
            android:gravity="center"
            android:text="@string/act_register_register"
            android:textColor="@color/act_register_textcolor1"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_act_register_agree"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cb_act_register"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/xvector_checkbox_unsel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/act_register_agree"
                android:textColor="@color/act_register_tvcolor2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_zhucexieyi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/act_register_tudouxieyi"
                android:textColor="@color/act_register_tvbac1"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_placeholder"
            android:layout_width="match_parent"
            android:layout_height="400dp" />


    </LinearLayout>
</ScrollView>
