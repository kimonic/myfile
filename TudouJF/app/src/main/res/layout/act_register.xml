    android:background="@color/global_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="65dp">

            <ImageView
                android:layout_width="162dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/act_login_bac" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/xshape_roundrect_edittextbac"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"

                android:contentDescription="@null"
                android:src="@drawable/act_login2_phone"

                />

            <EditText
                android:id="@+id/et_act_register_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/act_register_username"
                android:inputType="phone"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/iv_act_register_clear"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/xvector_clear" />
            </LinearLayout>

        </LinearLayout>


