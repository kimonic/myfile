<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_frag_managemoneymatterschild_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/frag_managemoneymatterschild_bac"
            android:gravity="center"
            android:text="@string/frag_managemoneymatters_quanbu"
            android:textColor="@color/global_theme_background_color"
            android:textSize="14sp"

            />

        <LinearLayout
            android:id="@+id/ll_frag_managemoneymatterschild1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_managemoneymatters_anlilv"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild1"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_updownarrow3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_frag_managemoneymatterschild2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_managemoneymatters_anqixian"
                android:textColor="@color/color_black"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild2"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_updownarrow3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_frag_managemoneymatterschild3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/frag_managemoneymatters_anhuankuanfangshi"
                android:textColor="@color/color_black"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/tv_frag_managemoneymatterschild3"
                android:layout_width="14dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/xvector_downarrow" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_background_color" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_managemoneymatterstouchild"
        style="@style/SmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/global_background_color">

        <ListView
            android:id="@+id/lv_frag_managemoneymatterstouchild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/global_background_color"
            android:dividerHeight="10dp" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>