<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_act_drawgesture_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        />
    <TextView
        android:id="@+id/tv_act_drawgesture_welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/act_lock_welcom"
        android:textColor="@color/act_lock_textcolor1"

        />

    <com.tudoujf.ui.MLockView
        android:id="@+id/mlv_act_drawgesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


        <TextView
            android:id="@+id/tv_act_drawgesture_pass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/act_drawgesture_textcolor"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/act_drawgesture_pass"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/xshape_roundrect_mblue1"
            />

</LinearLayout>