<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_godsdetails"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/duihuan"
        app:leftImage="@drawable/xvector_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_act_godsdetails"
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/iv_act_goodsdetails_leftarrow"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/act_goods_leftarrow"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                    <HorizontalScrollView
                        android:id="@+id/hsv_act_godsdetails"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                        <LinearLayout
                            android:id="@+id/ll_act_goodsdetails_imagesgroup"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >

                        </LinearLayout>
                    </HorizontalScrollView>

                    <ImageView
                        android:id="@+id/iv_act_goodsdetails_rightarrow"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/act_goods_rightarrow"
                        android:scaleType="fitXY"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_act_goodsdetails_title"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="磁悬浮HiFi音响"
                android:textColor="@color/color_black2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_act_goodsdetails_bewrite"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="磁悬浮HiFi音响"
                android:textColor="@color/color_gray3"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/lipinhao"
                    android:textColor="@color/color_gray3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_act_goodsdetails_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="SM08"
                    android:textColor="@color/color_black2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/duihuanjifen"
                    android:textColor="@color/color_gray3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_act_goodsdetails_needintegral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="10999"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/wodejifenmao"
                    android:textColor="@color/color_gray3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_act_goodsdetails_myintegral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="10999"
                    android:textColor="@color/color_orange"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_act_goodsdetails_reduce"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/jianhao"
                        android:textColor="@color/color_gray3"
                        android:textSize="14sp"
                        android:background="@drawable/xshape_fourboder"
                        />

                    <TextView
                        android:id="@+id/tv_act_goodsdetails_number"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/color_gray3"
                        android:background="@drawable/xshape_fourboder"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_act_goodsdetails_add"
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="@string/jiahao"
                        android:textColor="@color/color_gray3"
                        android:background="@drawable/xshape_fourboder"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/fen"
                        android:textColor="@color/color_gray3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/kucun"
                        android:textColor="@color/color_gray3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_act_goodsdetails_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="10"
                        android:textColor="@color/color_gray3"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/fen"
                        android:textColor="@color/color_gray3"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/color_line" />-->

            <com.tudoujf.ui.BorderLinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/color_line"
                android:orientation="horizontal">

                <com.tudoujf.ui.BoderTextView
                    android:id="@+id/btv_act_godsdetails_btv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/chanpingaishu"
                    android:textColor="@color/global_theme_background_color"
                    android:textSize="12sp"
                    app:bunderlinecolor="@color/global_theme_background_color" />

                <com.tudoujf.ui.BoderTextView
                    android:id="@+id/btv_act_godsdetails_btv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/xiangxijieshao"
                    android:textColor="@color/color_black2"
                    android:textSize="12sp" />

                <com.tudoujf.ui.BoderTextView
                    android:id="@+id/btv_act_godsdetails_btv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/shiyonghsuoming"
                    android:textColor="@color/color_black2"
                    android:textSize="12sp" />

            </com.tudoujf.ui.BorderLinearLayout>

            <TextView
                android:id="@+id/tv_act_goodsdetails_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_act_godsdetails_nowexchange"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@color/global_theme_background_color"
        android:gravity="center"
        android:text="@string/lijiduihuan"
        android:textColor="@color/color_white"
        android:textSize="14sp" />
</LinearLayout>
