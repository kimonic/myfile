<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_act_set_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/global_theme_background_color"
        android:gravity="center"
        android:text="@string/shezhi"
        android:textColor="@color/color_white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/xshape_roundrect_themecolor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/tudoujinfuv"
            android:textColor="@color/global_theme_background_color"
            android:layout_marginBottom="8dp"
            android:textSize="18sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/global_background_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp"
        android:background="@color/color_white"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/guangfangwangzhan"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/wangzhi"
            android:textColor="@color/color_black2"
            android:textSize="14sp"
            android:enabled="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@color/color_white"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/weixinhao"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/weixinhaon"
            android:textColor="@color/color_black2"
            android:textSize="14sp"
            android:enabled="true"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:background="@color/color_line" />


    <LinearLayout
        android:id="@+id/ll_act_set_kefudianhua"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@color/color_white"

        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="18dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/kefudianhua"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/kefuhaoma"
            android:textColor="@color/global_theme_background_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/global_background_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"



        android:id="@+id/ll_act_set_help"
        android:background="@color/color_white"

        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/bangzhuzhongxin"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/xvector_rightarrowlarge"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />


    <LinearLayout
        android:id="@+id/ll_act_set_feedback"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/color_white"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/yijianfankui"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/xvector_rightarrowlarge"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />


    <LinearLayout
        android:id="@+id/ll_act_set_checkupdate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/color_white"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/jianchagengxin"
            android:textColor="@color/color_black2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:background="@drawable/xvector_rightarrowlarge"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/global_background_color"/>


</LinearLayout>