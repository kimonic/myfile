<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:id="@+id/lv"
            >

            <TextView
                android:id="@+id/lvitem_redpackage_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/act_redpackage_danbitouzi"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lvitem_redpackage_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/act_redpackage_touziyueshu"
                android:textColor="@color/color_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lvitem_redpackage_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/act_redpackage_hongbaodaxiao"
                android:textColor="@color/color_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lvitem_redpackage_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/act_redpackage_zhuangtai"
                android:textColor="@color/color_black"
                android:textSize="14sp" />


        </LinearLayout>



            <com.tudoujf.ui.RedView
                android:id="@+id/lvitem_redpackage_rv5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:type="2"
                />


    </LinearLayout>

</LinearLayout>