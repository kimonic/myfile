<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_productdetails"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/act_productdetails_temptitle"
        app:leftImage="@drawable/xvector_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <com.tudoujf.ui.InfoView
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_rongzijine"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="XX,XXX.XX元"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_shengyuketou"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="XX,XXX.XX元"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_huankuanfangshi"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="XXXXXXX"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_jiekuanzhuangtai"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="XXXXXXX"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_touzirenshu"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="XXXXXXX"
                    android:textColor="@color/color_black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/act_productdetails_jieshushujian"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="XX天XX时XX分XX秒"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/act_productdetails_baccolor1"
                android:orientation="horizontal">

                <com.tudoujf.ui.UnderlineTextView
                    android:id="@+id/utv_act_productdetails1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/act_productdetails_xiangmuxiangqing"
                    android:textColor="@color/act_productdetails_tvcolor"
                    android:textSize="16sp" />

                <com.tudoujf.ui.UnderlineTextView
                    android:id="@+id/utv_act_productdetails2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/act_productdetails_changjianwenti"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

                <com.tudoujf.ui.UnderlineTextView
                    android:id="@+id/utv_act_productdetails3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/act_productdetails_touziliebiao"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_act_productdetails_xiangmuxiangqing"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"

                        android:src="@drawable/act_productdetails2_xiangmumiaoshu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="@string/act_productdetails_xiangmumiaoshu"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/act_productdetails_miaoshuneirong"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_huankuanbaozhang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="@string/act_productdetails_huankuanbaozhang"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/act_productdetails_baozhangneirong"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_fengkongyijian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="@string/act_productdetails_fengkongyijian"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/act_productdetails_fegnkongneirong"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_baozhangjigou" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="@string/act_productdetails_baozhangjigou"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/act_productdetails_jigouneirong"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_fengxiantishi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:text="@string/act_productdetails_fengxiantishi"
                        android:textSize="16sp"

                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/act_productdetails_fengxianneirong"
                    android:textColor="@color/act_productdetails_tvcolor1"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_act_productdetails_touziliebiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ListView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lv_act_productdetails"
                    android:dividerHeight="0dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_productdetails_touzizonge"
                        android:textSize="12sp"
                        android:textColor="@color/act_productdetails_tvcolor2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_productdetails_tempdata"
                        android:textSize="12sp"
                        android:textColor="@color/act_productdetails_tvcolor2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_productdetails_touzirenci"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/act_productdetails_tvcolor2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/act_productdetails_tempdata1"
                        android:textSize="12sp"
                        android:textColor="@color/act_productdetails_tvcolor2"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/ll_act_productdetails_changjianwenti"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/act_productdetails2_xiangmuziliao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:text="@string/act_productdetails_xiangmuziliao"
                    android:textSize="16sp"

                    />
            </LinearLayout>

            <com.tudoujf.ui.MHorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/hsv_act_productdetails"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:contentDescription="@null"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_ziliao1" />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:contentDescription="@null"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_ziliao2" />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:contentDescription="@null"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/act_productdetails2_ziliao3" />
                </LinearLayout>
            </com.tudoujf.ui.MHorizontalScrollView>

            <com.tudoujf.ui.IndicatorView
                android:id="@+id/iv_act_productdetails"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/tv_act_productdetails_buynow"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="38dp"
                android:text="@string/act_productdetails_lijigoumai"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/color_white"
                android:background="@color/global_theme_background_color"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>