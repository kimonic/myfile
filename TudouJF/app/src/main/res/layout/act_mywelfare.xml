<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_act_mywelfare_mtb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/global_theme_background_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_act_mywelfare_back"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/xvector_back" />

        <TextView
            android:id="@+id/tv_act_mywelfare_redpackage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hongbao"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_act_mywelfare_jiaxiquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jiaxiquan"
            android:textColor="@color/act_mymessage_unselcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_act_mywelfare_fanxianquan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fanxianquan"
            android:textColor="@color/act_mymessage_unselcolor"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_act_mywelfare_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>