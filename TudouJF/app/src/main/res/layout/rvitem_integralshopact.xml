        <ImageView
            android:id="@+id/iv_rvitem"
            android:layout_width="118dp"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitCenter" />


        <TextView
            android:id="@+id/tv_rvitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_rvitem_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:textColor="@color/color_gray3"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:text="@string/jifen"
                android:textColor="@color/color_gray3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rvitem_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/color_orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_rvitem_residue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/color_gray3"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>