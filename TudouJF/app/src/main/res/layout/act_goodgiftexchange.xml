<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_yellow"
    android:orientation="vertical"
    >
    <com.tudoujf.ui.MTopBarView
        android:id="@+id/mtb_act_goodgiftexcahnge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/act_register_tvbac1"
        app:centerText="@string/haoliduihuan"
        app:leftImage="@drawable/xvector_back" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="268dp"
                android:scaleType="fitXY"
                android:src="@drawable/act_goodgiftexchange_head"/>

            <EditText
                android:id="@+id/et_act_goodgiftexchange_duihuanma"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="30dp"
                android:hint="@string/qingshuruduihuanma"
                android:textSize="14sp"
                android:background="@drawable/xshape_roundrect_goodgiftexchange"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                >
                <EditText
                    android:id="@+id/et_act_goodgiftexchange_yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="@string/qingshurutuxingyanzhengma"
                    android:textSize="14sp"
                    android:background="@drawable/xshape_roundrect_goodgiftexchange"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="36dp"
                    android:layout_marginEnd="36dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />

                <com.tudoujf.ui.VerificationCodeView
                    android:id="@+id/vcv_act_goodgiftexchange_yanzhengma"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_act_goodgiftexchange_duihuan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:textSize="16sp"
                android:background="@drawable/xshape_roundrect_goodgiftexchange1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:text="@string/duihuan"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/huodongduixiang"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="50dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_black"
                android:text="@string/jinxianchiduihuanmayonghu"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/huodongshuoming"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_black"
                android:text="@string/shuoming1"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_black"
                android:text="@string/shuoming2"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/color_white"
                android:text="@string/ruyouyiwen"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                />



        </LinearLayout>

    </ScrollView>



</LinearLayout>