        android:id="@+id/tv_act_newcomerexperiencebid_bidnow"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:background="@color/global_theme_background_color"
        android:gravity="center"
        android:text="@string/act_newcommerexperiencebid_lijitoubiao"
