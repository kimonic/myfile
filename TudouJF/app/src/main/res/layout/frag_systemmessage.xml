<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_frag_systemmessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/SmartRefreshLayout"
        android:background="@color/global_background_color"
        >
        <ListView
            android:id="@+id/lv_frag_systemmessage"
            android:layout_width="match_parent"
            android:background="@color/color_white"
            android:layout_height="wrap_content"
            />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/tv_frag_systemmessage_previous"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_systemmessage_previous"
            android:textColor="@color/global_theme_background_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_frag_systemmessage_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/frag_systemmessage_next"
            android:textColor="@color/global_theme_background_color"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>